def fmt_trunc_str(x, ndigits=2):
    """
    Format a numeric value with fixed decimal places—without rounding side effects.
    E.g., 0.1234 → '0.12'; 2 → '2.00'
    """
    s = str(x)
    if "." in s:
        whole, frac = s.split(".", 1)
        frac = (frac + "0"*ndigits)[:ndigits]
        return f"{whole}.{frac}"
    else:
        return f"{s}.{'0'*ndigits}"

